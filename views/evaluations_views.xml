<odoo>
    <record id="course_evaluations_view_list" model="ir.ui.view">
        <field name="name">evaluations.list</field>
        <field name="model">course.evaluations</field>
        <field name="type">list</field> <field name="arch" type="xml">
            <list>
                <field name="evaluation_description"/>
                <field name="course_id"/>
                <field name="evaluation_date"/>
                <field name="evaluation_weighting"/>
            </list>
        </field>
    </record>

    <record id="course_evaluation_view_form" model="ir.ui.view">
        <field name="name">evaluation.form</field>
        <field name="model">course.evaluations</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="evaluation_description"/>
                        <field name="evaluation_date"/>
                        <field name="evaluation_weighting"/>
                        <field name="course_id"/>
                    </group>
                </sheet>>
            </form>
        </field>
    </record>

    <record id="course_evaluations_action" model="ir.actions.act_window">
        <field name="name">Evaluations</field>
        <field name="res_model">course.evaluations</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>