<odoo>
    <record id="grades_course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">grades.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="grades_course_view_list" model="ir.ui.view">
        <field name="name">grades.course.tree</field>
        <field name="model">grades.course</field>
        <field name="type">list</field> <field name="arch" type="xml">
            <list string="Cursos">
                <field name="name"/>
                <field name="description"/>
                <field name="is_active"/>
                <field name="teacher_course"/>
                <field name="init_date"/>
                <field name="end_date"/>
                <field name="last_evaluation_date"/>
                <field name="course_image" widget="image" options="{'size': [150, 100]}"/>
            </list>
        </field>
    </record>

    <record id="grades_course_view_form" model="ir.ui.view">
        <field name="name">grades.course.form</field>
        <field name="model">grades.course</field>
        <field name="arch" type="xml">
            <form string="Cursos">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable' : 1}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="student_qty"/>
                            <field name="init_date"/>
                            <field name="end_date"/>
                            <field name="is_active"/>
                            <field name="teacher_course"/>
                            <field name="evaluations_course_ids"/>
                        </group>
                        <group>
                            <field name="last_evaluation_date"/>
                            <field name="course_image"/>
                            <field name="course_shif_selection"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>