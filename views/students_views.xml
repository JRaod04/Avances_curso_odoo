<odoo>
    <record id="students_view_list" model="ir.ui.view">
        <field name="name">students.view.list</field>
        <field name="model">res.partner</field>
        <field name="type">list</field> <field name="arch" type="xml">
            <list>
                <field name="complete_name"/>
                <field name="email"/>
                <field name="image_1920" widget="image" options="{'size': [100, 100]}"/>
            </list>
        </field>
    </record>

    <record id="students_view_form" model="ir.ui.view">
        <field name="name">students.view.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="is_student"/>
                        <field name="image_1920" widget="image" options="{'size': [100, 100]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="students_actions" model="ir.actions.act_window">
        <field name="name">students.actions</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_student', '=', True)]</field>
        <field name="view_ids"
                    eval="[(5,0,0),
                           (0, 0, {'view_mode':'list', 'view_id': ref('students_view_list')}),
                           (0, 0, {'view_mode':'form', 'view_id': ref('students_view_form')})]"/>
        <field name="context">{'is_student': True}</field>
    </record>
</odoo>